<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:contentInsetStart="7dp"
            app:contentInsetEnd="7dp"
            android:layout_height="?attr/actionBarSize">

        <com.westsamoaconsult.labtests.utils.TapOpacityHighlightLayout
                android:id="@+id/btnLeft"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:padding="5dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/back" />

        </com.westsamoaconsult.labtests.utils.TapOpacityHighlightLayout>

        <TextView
                android:id="@+id/actionBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:text="YOUR ACTIVITY TITLE"
                android:textSize="18sp"
                android:textColor="#ffffff" />

        <com.westsamoaconsult.labtests.utils.TapOpacityHighlightLayout
            android:id="@+id/btnRight"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="end"
            android:padding="4dp">

            <ImageView
                android:id="@+id/btnRightImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star_nonfilled_22" />

            <TextView
                android:id="@+id/btnRightText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edit"
                android:textSize="17sp"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:src="@drawable/star_nonfilled_22" />

        </com.westsamoaconsult.labtests.utils.TapOpacityHighlightLayout>
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>